{
  "compilerOptions": {
    
    "target": "es2016",    
    "useDefineForClassFields": true,                                                               
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",                                
    "outDir": "./dist", 
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,                              
  },
  "include": ["src"],
}
